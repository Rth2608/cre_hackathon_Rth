VITE_THIRDWEB_CLIENT_ID=
VITE_WORLD_ID_APP_ID=
VITE_WORLD_ID_ACTION=
# Optional split config (recommended)
# Mini App (World App/orb path)
VITE_WORLD_ID_MINI_APP_ID=
VITE_WORLD_ID_MINI_ACTION=
# External Widget / simulator path
VITE_WORLD_ID_EXTERNAL_APP_ID=
VITE_WORLD_ID_EXTERNAL_ACTION=

# Recommended for local/SSH-tunnel dev: leave VITE_API_BASE_URL unset and use dev proxy.
VITE_API_PROXY_TARGET=http://127.0.0.1:8787
# Optional: add comma-separated external hostnames for Vite dev server host checks.
# Example: VITE_ALLOWED_HOSTS=recorder-underground-top-fuji.trycloudflare.com
VITE_ALLOWED_HOSTS=

# Required for cloud deployment (Vercel) where dev proxy is unavailable.
# Example: https://your-orchestrator.up.railway.app
# VITE_API_BASE_URL=https://your-api-host
